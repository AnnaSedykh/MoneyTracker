<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="@dimen/offset_10dp"
    android:layout_marginRight="@dimen/offset_10dp"
    android:layout_marginTop="@dimen/offset_5dp"
    android:layout_marginBottom="@dimen/offset_5dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorItem"
        android:padding="16dp"
        android:textColor="@color/colorText"
        tools:text="Молоко" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/colorItemDark"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="@color/colorText"
        tools:text="35₽" />

</LinearLayout>